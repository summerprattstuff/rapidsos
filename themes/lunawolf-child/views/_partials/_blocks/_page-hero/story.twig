{% set title           = block.title %}
{% set subtitle        = block.subtitle %}
{% set bg_image        = block.bg_image %}

<section class="heroStory">
    {% if bg_image %}
        <div class="heroStory__imgWrapper">
            <div class="heroStory__img" style="background-image: url({{ get_image(bg_image)|e('esc_url') }})"></div>
        </div>
    {% endif %}
    <div class="wrapper">
        <div class="heroStory__top">
            <div class="_w">
                <div class="heroStory__top__left _l6">
                    <div class="heroStory__top__left__box">
                        <div class="heroStory__top__left__box__inner">
                            <div class="titleWrapper">
                                <h2 class="title">{{ heroTitle ? heroTitle|e('esc_html') : title|e('esc_html') }}</h2>
                            </div>
                            {% if subtitle %}
                                <p class="subtitle">{{ subtitle|e('esc_html') }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="heroStory__top__right _l6">
                    <div class="heroStory__top__right__inner">
                        {% if bg_image %}
                            <div class="heroStory__top__right__inner__wrapImg">
                                <div class="heroStory__top__right__inner__bgImg" style="background-image: url({{ get_image(bg_image)|e('esc_url') }})"></div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>