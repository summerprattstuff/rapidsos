{% set title       = block.title %}
{% set subtitle    = block.subtitle %}
{% set link        = block.link %}
{% set bg_color    = block.bg_color %}
{% set txt_color   = block.text_color %}
{% set lg_bg_color = block.lg_bg_color %}
{% set opacity     = block.overlay_opacity %}

{% if not is_preview %}
  {#  {{ dump(settings) }}#}
{% endif %}

{% if title or subtitle %}
    <section id="{{ settings.block_id }}" class="m__scText{{ lg_bg_color ? ' -linear'}}" style="{{ bg_color ? 'background: ' ~ bg_color ~ ';' }}">
        <div class="overlayBg" style="
        {{ bg_color ? 'background: ' ~ bg_color ~ ';' }}
        {{ opacity ? 'opacity: ' ~ opacity ~ ';' }}"></div>
        <div class="wrapper">
            <div class="container" style="{{ txt_color ? 'color: ' ~ txt_color ~ ';' }}">
                <div class="titleWrapper -center -short">
                    {% if title %}
                        <h1 class="m__title m__scText__title">{{ title }}</h1>
                    {% endif %}
                    {% if subtitle %}
                        <h3 class="m__text m__scText__text">{{ subtitle }}</h3>
                    {% endif %}
                    {% if link %}
                        <div class="btnWrapper">
                            {% include '_components/_advanced_link.twig' with {
                                link: link,
                                class: ''
                            } %}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% if not is_preview %}
            {{ settings.styles | raw }}
        {% endif %}
        </div>
    </section>
{% elseif is_preview %}
    <div class="_center">
        Add <strong>title</strong> or <strong>subtitle</strong> to show on page.
    </div>
{% endif %}