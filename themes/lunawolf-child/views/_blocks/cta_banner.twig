{% set bgColor = block.bg_color %}
{% set title   = block.title %}
{% set link    = block.link %}

{% if not is_preview %}
  {#  {{ dump(settings) }}#}
{% endif %}

{% if title or link %}
    <section id="{{ settings.block_id }}" class="m__ctaBanner{{ bgColor ? ' -gradient' }}">
        <div class="wrapper">
            <div class="titleWrapper -center">
                {% if title %}
                    <h1 class="m__title__white m__ctaBanner__title">{{ title }}</h1>
                {% endif %}
                {% if link %}
                    <div class="btnWrapper">
                        {% include '_components/_advanced_link.twig' with {
                            link: link,
                            class: ''
                        } %}
                    </div>
                {% endif %}
            </div>
        </div>
        {% if not is_preview %}
            {{ settings.styles | raw }}
        {% endif %}
    </section>
{% elseif is_preview %}
    <div class="_center">
        Add <strong>title</strong> or <strong>link</strong> to show on page.
    </div>
{% endif %}
