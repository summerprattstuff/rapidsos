{% set title   = block.title %}
{% set steps   = block.steps %}

{% if not is_preview %}
  {#  {{ dump(settings) }}#}
{% endif %}

{% if steps %}
<section id="{{ settings.block_id }}" class="m__steps">
    <div class="wrapper">
        {% if title %}
            <div class="titleWrapper -short -center">
                <h1 class="m_title m__steps__title">{{ title }}</h1>
            </div>
        {% endif %}
        <div class="m__steps__wrapper">
            <div class="m__steps__wrap m__steps__full">
                {% for step in steps %}
                    {% set img         = step.step_img %}
                    {% set banner_text = step.banner_text %}

                    {% if img %}
                        <div class="m__steps__blockWrap">
                            <div class="m__steps__blockWrap__bgImg" style="{% if img %}background-image: url({{ get_image(img) }}){% endif %}">
                                <div class="m__steps__blockWrap__bgImg__banner m__steps__banner -top">
                                    <h2 class="m__steps__blockWrap__bgImg__banner__text">{{ banner_text }}</h2>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="m__steps__wrap m__steps__onlyText">
                {% for step2 in steps %}
                    {% set img         = step2.step_img %}
                    {% set banner_text = step2.banner_text %}

                    {% if img %}
                        <div class="m__steps__blockWrap">
                            <div class="m__steps__blockWrap__banner m__steps__banner -bot">
                                <h2 class="m__steps__blockWrap__banner__text">{{ banner_text }}</h2>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
  </div>
  {% if not is_preview %}
    {{ settings.styles | raw }}
  {% endif %}
</section>
{% elseif is_preview %}
    <div class="_center">
        Add at least one step to show on page.
    </div>
{% endif %}