{% set testimonialIDs = block.testimonials %}

{% set section_animation  = settings['section_animation'] %}

{% set text_color  = settings.text_color %}

{% if not is_preview %}
  {#  {{ dump(settings) }}#}
{% endif %}

{% if testimonialIDs %}
    {% set testimonials = get_posts(testimonialIDs) %}
    {% if section_animation  %}
        {% set animation_type  = settings.animation_type %}
        {% set animation_duration  = settings.animation_duration %}
        {% set animation_delay  = settings.animation_delay %}
    <section id="{{ settings.block_id }}" class="m__testimonialSlider appear-animate animated-{{animation_duration}}" data-settings="{'_animation':'{{animation_type}}','_animation_delay':{{animation_delay}}}">
    {% else %}
    <section id="{{ settings.block_id }}" class="m__testimonialSlider">
    {% endif %}
        {% include '_components/settings_overlay.twig' %}
        <div class="wrapper">
            <div class="container color-{{ text_color ?: 'primary' }}">
                <div class="testimonials">
                    <div class="swiper js-testimonialSlider">
                        <div class="swiper-wrapper">
                            {% for testimonial in testimonials %}
                                {% set author       = testimonial.title %}
                                {% set quote        = testimonial.meta('quote') %}
                                {% set author_title = testimonial.meta('author_title') %}
                                {% set logo         = testimonial.meta('logo') %}
                                {% set tags         = testimonial.meta('tags') %}

                                <div class="swiper-slide">
                                    <div class="m__testimonialSlider__inner">
                                        {% if logo %}
                                            <img class="m__testimonialSlider__inner__img" src="{{ get_image(logo) }}" alt="">
                                        {% endif %}
                                        {% if tags %}
                                            <div class="m__testimonialSlider__inner__tags">
                                                {% for tag in tags %}
                                                    {% set label = tag.tag_label %}
                                                    {% set value = tag.tag_value %}
                                                    <p class="m__testimonialSlider__inner__tags__label">{{ label }}:</p>
                                                    <p class="m__testimonialSlider__inner__tags__value">{{ value }}</p>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                        {% if quote %}
                                            <div class="quoteContent">
                                                <div class="svgWrapper">
                                                    <svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 39 32" width="39" height="32"><defs><image  width="39" height="32" id="img1" href="data:image/png;base64,"/></defs><style></style><use  href="#img1" x="0" y="0"/></svg>
                                                </div>
                                                <p class="m__testimonialSlider__inner__quote">{{ quote }}</p>
                                            </div>
                                        {% endif %}
                                        {% if author or author_wrapper %}
                                            <div class="authorWrapper">
                                                <p class="m__testimonialSlider__inner__author">{{ author }}</p>
                                                <p class="m__testimonialSlider__inner__authorTitle">{{ author_title }}</p>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>
                    </div>
                </div>
            </div>
        </div>
        {% if not is_preview %}
            {{ settings.styles | raw }}
        {% endif %}
    </section>
{% elseif is_preview %}
    <div class="_center">
        Add at least one testimonial to show on page.
    </div>
{% endif %}