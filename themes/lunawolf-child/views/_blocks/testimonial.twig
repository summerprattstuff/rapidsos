{% set testimonialID = block.testimonial %}
{% set t_width       = block.reduce_width %}

{% if not is_preview %}
  {#  {{ dump(settings) }}#}
{% endif %}

{% if testimonialID %}
    {% set testimonial = get_post(testimonialID) %}
    {% set author      = testimonial.title %}
    {% set quote       = testimonial.meta('quote') %}

    <section id="{{ settings.block_id }}" class="m__testimonial">
        <div class="wrapper{{ t_width ? ' -limit' : '' }}">
            <div class="container">
                <div class="testimonial">
                    <svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 94 77" width="94" height="77">
                        <defs>
                            <image  width="94" height="77" id="img2" href="data:image/png;base64,"/>
                        </defs>
                        <use id="Background" href="#img2" x="0" y="0"/>
                    </svg>
                    <div class="m__testimonial__content">
                        <h3 class="m__testimonial__quote">{{ quote }}</h3>
                        <h4 class="m__testimonial__author">{{ author }}</h4>
                    </div>
                </div>
            </div>
        </div>
        {% if not is_preview %}
            {{ settings.styles | raw }}
        {% endif %}
    </section>
{% elseif is_preview %}
    <div class="_center">
        Add testimonial to show on page.
    </div>
{% endif %}