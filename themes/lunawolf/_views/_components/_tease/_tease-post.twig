{% extends "_components/_tease/_tease.twig" %}

{% block content %}
  <h2 class="h2">
    <a href="{{ url|e('esc_url') }}">{{ title|e('esc_html') }}</a>
  </h2>
  <p>{{ post.excerpt({ words: 5, read_more: "Keep reading" }) }}</p>
  {% if post.thumbnail.src %}
    <img src="{{ post.thumbnail.src }}" />
  {% endif %}
{% endblock %}